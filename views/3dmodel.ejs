<!DOCTYPE html>
<html>
    <head>
        <title>Скачать 3d модель бесплатно</title>
        <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body style="margin-top:50px">
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Заказать изготовление 3d модели</h4>
              </div>
              <div class="modal-body">
                <% for(var i = 0, lgth = thng.files.length; i < lgth; i++) {%>
                    <div class="row well">
                        <div class="col-md-2">
                            <img src="<%= thng.files[i].pic %>" class="img-responsive">
                        </div>
                        <div class="col-md-4">
                            <%= thng.files[i].name %>
                        </div>
                        <div class="col-md-4">
                            Материал:
                            <select class="printmaterial">
                                <% for(var j = 0, jlgth = mtrls.length; j < jlgth; j++) {%>
                                    <option>
                                        <%= mtrls[j].name %>
                                    </option>
                                <% } %>
                            </select>
                        </div>
                        <div class="col-md-2 printprice">
                        </div>
                    </div>
                <% } %>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
              </div>
            </div>
          </div>
        </div>
        <%- include nav.ejs %>
        <div class="container">
            <h1 class="text-center">Скачать 3d модель</h1>
            <hr>
            <div class="row">
                    <div class="col-xs-12" id="slider">
                        <!-- Top part of the slider -->
                        <div class="row">
                            <div class="col-sm-8" id="carousel-bounding-box">
                                <div class="carousel slide" id="myCarousel">
                                    <!-- Carousel items -->
                                    <div class="carousel-inner">
                                        <% for(var i = 0, lgth = thng.pics.length; i < lgth; i++) {%>
                                            <div class="<% if (i === 0) {%> active <%}%> item" data-slide-number="<%= i %>">
                                            <img src="<%= thng.pics[i] %>" style="width:100%"></div>
                                        <% } %>
                                    </div><!-- Carousel nav -->
                                    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                                        <span class="glyphicon glyphicon-chevron-left"></span>                                       
                                    </a>
                                    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                                        <span class="glyphicon glyphicon-chevron-right"></span>                                       
                                    </a>                                
                                    </div>
                            </div>

                            <div class="col-sm-4" id="carousel-text"></div>

                            <div id="slide-content" class="text-center">
                                <div class="row hidden-xs" id="slider-thumbs">
                                    <!-- Bottom switcher of slider -->
                                    <ul class="hide-bullets" style="list-style: none">
                                        <% for(var i = 0, lgth = thng.thumbs.length; i < lgth; i++) {%>
                                            <li class="col-sm-1">
                                                <a class="thumbnail" id="carousel-selector-<%= i %>"><img src="<%= thng.thumbs[i] %>"></a>
                                            </li>
                                        <% } %>
                                    </ul>
                                    <a class="btn btn-default btn-lg" href="http://www.thingiverse.com/thing:<%= thng.id %>/zip">Скачать файлы архивом</a>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div><!--/Slider-->
                
                <hr>
                
                <h2 class="text-center">Заказать печать</h2>
                
                <% for(var i = 0, lgth = thng.files.length; i < lgth; i++) {%>
                    <div class="row well">
                        <div class="col-md-2">
                            <img src="<%= thng.files[i].pic %>" class="img-responsive">
                        </div>
                        <div class="col-md-4">
                            <%= thng.files[i].name %>
                        </div>
                        <div class="col-md-4">
                            Материал:
                            <select class="printmaterial" data-vol="<%= thng.files[i].vol %>">
                                <% for(var j = 0, jlgth = mtrls.length; j < jlgth; j++) {%>
                                    <option>
                                        <%= mtrls[j].name %>
                                    </option>
                                <% } %>
                            </select>
                        </div>
                        <div class="col-md-2 printprice">
                        </div>
                    </div>
                <% } %>
        </div>
        <script src="/js/jquery-1.10.2.min.js"></script>
        <script src="/js/flat-ui.min.js"></script>
        <script src="/js/3dmodel.js"></script>
    </body>
</html>