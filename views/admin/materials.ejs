<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Удобный сервис 3d печати с доставкой</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <!-- Loading Bootstrap -->
        <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
        <link href="/css/dropzone.css" rel="stylesheet">
        <link href="/css/admin.css" rel="stylesheet">
        <link rel="shortcut icon" href="img/favicon.ico">

        <!-- HTML5 shim, for IE6-8 support of HTML5 elements. All other JS at the end of file. -->
        <!--[if lt IE 9]>
          <script src="js/vendor/html5shiv.js"></script>
          <script src="js/vendor/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        
        <%- include nav.ejs %>
        <div class="container">
            <div class="row">
                <h1 class="text-center">Добавить материал</h1>
                <div class="col-md-6">
                    <div class="dropzone">
                        
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" id="name" placeholder="Название">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="price" id="price" placeholder="Цена за куб.см.">
                    </div>
                    <label for="desc">Описание</label>
                    <textarea class="form-control" name="desc" id="desc"></textarea>
                    <br>
                    <button class="btn btn-sm btn-danger" id="save">Сохранить</button>
                </div>
            </div>
            <div class="row">
                <h1 class="text-center">Доступные материалы</h1>
                <div class="col-md-12" id="materials">
                    <% for(var i = 0, lgth = materials.length; i < lgth; i++) {%>
                        <div class="col-md-3">
                            <div class="thumbnail">
                                <%= materials[i] %>
                                <button type="button" class="close" data-id="<%= materials[i]._id %>"><span aria-hidden="true">&times;</span></button>
                                <img src="<%= materials[i].thumbs[0] %>">
                                <div class="caption">
                                    <h2><%= materials[i].name %></h2>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
        
        <!-- jQuery (necessary for Flat UI's JavaScript plugins) -->
        <script src="/js/jquery-1.10.2.min.js"></script>
        <!-- Include all compiled plugins (below), or include individual files as needed -->
        <script src="/js/flat-ui.min.js"></script>
        <script src="/js/dropzone.js"></script>
        <script src="/js/admin/materials.js"></script>
    </body>
</html>